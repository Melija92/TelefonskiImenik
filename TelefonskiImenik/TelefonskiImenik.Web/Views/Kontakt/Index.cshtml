@model IEnumerable<TelefonskiImenik.Model.Kontakt>

@{
    ViewBag.Title = "Kontakti";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Dodaj novi kontakt", "Dodaj")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th>
            Grad
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grad.NazivGrada)
            </td>
            <td>
                @Html.ActionLink("Uredi", "Uredi", new { id = item.KontaktId }) |
                @Html.ActionLink("Detalji", "Detalji", new { id = item.KontaktId }) |
                @Html.ActionLink("Izbriši", "Izbrisi", new { id = item.KontaktId })
            </td>
        </tr>
    }

</table>
